      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-md-end" id="navbarNavAltMarkup">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
     <p class="text-light p-0">You are logged as : {{ app.user.username}}</p>
        <button type="button" alt="Disconnect" class="btn text-light mt-3"><a class="nav-link" style="text-decoration:none;color:white;" href="/logout" role="button">Log Out</a></button>
       
        {% else %}
    <button type="button" alt="connect" class="btn text-light me-2 mt-3"><a class="nav-link" style="text-decoration:none;color:white;" href="/login" role="button">Log In</a></button>
    <button type="button" alt="inscription" class="btn btn-outline-light me-2 mt-3"><a class="nav-link" style="text-decoration:none;color:white;" href="/register" role="button">Register</a></button>
    {% endif %}
  
    </div>
  </div>
</nav>

